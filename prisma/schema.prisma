generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String                @id @default(cuid())
  name                 String?
  email                String                @unique
  emailVerified        DateTime?
  password             String
  image                String?
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  accounts             Account[]
  ebayBusinessPolicies EbayBusinessPolicies?
  ebayTokens           EbayToken?
  sessions             Session[]
  skuSettings                SkuSettings?
  bannedKeywords             BannedKeyword[]
  discountSettings           DiscountSettings?
  overrideDescriptionSettings OverrideDescriptionSettings?
  editModeSettings           EditModeSettings?
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model EbayToken {
  id           String   @id @default(cuid())
  userId       String   @unique
  accessToken  String
  refreshToken String?
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SkuSettings {
  id             String   @id @default(cuid())
  userId         String   @unique
  nextSkuCounter Int      @default(1)
  skuPrefix      String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EbayBusinessPolicies {
  id                    String   @id @default(cuid())
  userId                String   @unique
  paymentPolicyId       String?
  paymentPolicyName     String?
  returnPolicyId        String?
  returnPolicyName      String?
  fulfillmentPolicyId   String?
  fulfillmentPolicyName String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model BannedKeyword {
  id        String   @id @default(cuid())
  userId    String
  keyword   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, keyword])
  @@index([userId])
}

model DiscountSettings {
  id               String   @id @default(cuid())
  userId           String   @unique
  discountAmount   Float    @default(3.0)
  minimumPrice     Float    @default(4.0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model OverrideDescriptionSettings {
  id                     String   @id @default(cuid())
  userId                 String   @unique
  useOverrideDescription Boolean  @default(false)
  overrideDescription    String?  // The universal default description text
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
  user                   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EditModeSettings {
  id                String   @id @default(cuid())
  userId            String   @unique
  defaultEditMode   Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
